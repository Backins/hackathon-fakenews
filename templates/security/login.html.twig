{% extends 'front_base.html.twig' %}

{% block title %}NewsScan - Login{% endblock %}

{% block main %}
    <section class="row" style="text-align: center">
        <div class="offset-md-2 col-md-8 col-12">
            <h1>Se connecter</h1>
            <div class="container row" >
                <div class="col-12">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                            </div>
                        {% endif %}
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control input" placeholder="exemple@domaine.com" required autofocus>
                        <input type="password" name="password" id="inputPassword" class="form-control input"
                               placeholder="Mot de passe" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn n-btn-secondary text-light" type="submit" style="margin-top: 10px">
                            SE CONNECTER
                        </button>
                        <div class="row" style="margin: 30px">
                            <div class="vl col-4"></div>
                            <p class="center col-4">Ou</p>
                            <div class="vl col-4"></div>
                        </div>

                        <a class="btn n-btn-primary" href="{{ path('user_new') }}">S'INSCRIRE</a>

                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
