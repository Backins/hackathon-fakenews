{% extends 'front_base.html.twig' %}

{% block title %}Liste des domaines{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Liste des domaines</h1>
            </div>
            <div class="col-md-3 col-12">
                <h4>Légende :</h4>
                <ul class="list-group">
                    <li class="list-group-item">0 : Très fiable</li>
                    <li class="list-group-item">1 : Fiable</li>
                    <li class="list-group-item">2 : Assez fiable</li>
                    <li class="list-group-item">3 : Peu fiable</li>
                    <li class="list-group-item">4 : Pas fiable</li>
                </ul>
            </div>
            <div class="col-md-9 col-12">
                <table class="table table-light">
                    <thead>
                    <tr>
                        <th scope="col">Domaine</th>
                        <th scope="col">Niveau de confiance</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for target_source in target_sources %}
                        <tr>
                            <td>{{ target_source.domain }}</td>
                            <td>{{ target_source.confidenceLevel }}</td>
                            <td>
                                <a class="btn-sm btn-info" href="{{ path('target_source_edit', {'id': target_source.id}) }}">Modifier</a>
                                <a onclick="return confirm('Voulez-vous supprimer cette source ?');" class="btn-sm btn-danger" href="{{ path('target_source_delete', {'id': target_source.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucune source trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('target_source_new') }}" class="btn btn-primary">Créer une nouvelle source</a>
            </div>
        </div>
    </div>
{% endblock %}
