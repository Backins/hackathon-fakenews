<form method="post" action="{{ path('target_source_delete', {'id': target_source.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ target_source.id) }}">
    <button class="btn">Delete</button>
</form>
