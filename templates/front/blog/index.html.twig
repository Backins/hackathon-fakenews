{% extends 'front_base.html.twig' %}

{% block title %}NewsScan - Admin Blog{% endblock %}

{% block main %}
    <h1>Blog index</h1>
    {% for blog in blogs %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ blog.title }}</h5>
                <p class="card-text"{{ blog.body }}</p>
                <a href="{{ path('app_front_blog_show', {'id': blog.id}) }}" class="btn btn-primary">Voir</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
