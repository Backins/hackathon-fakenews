{% extends 'front_base.html.twig' %}

{% block title %}NewsScan - Résultat d'analyse{% endblock %}

{% block main %}

    {% if errors is defined %}
        <section class="row">
            <div class="offset-md-3 col-md-6 col-12">
                <div class="alert alert-danger" role="alert">
                    <h2>Oops ! Il semble y avoir un problème : </h2>
                    {% for error in errors %}
                        <p>- {{ error }}</p>
                    {% endfor %}
                    <p><em>Voici votre saisie : {{ link }}</em></p>
                </div>
            </div>
        </section>
    {% else %}
        <section class="row">
            <div class="offset-md-3 col-md-6 col-12">
                <div>
                    <svg id="fillgauge1" width="97%" height="250"></svg>
                </div>
                <div>
                    {% if user %}
                        {% if not findVote %}
                            {{ render(controller(
                                'App\\Controller\\ReviewController::index', {
                                    articleUrl: article.pageUrl
                                }
                            )) }}
                        {% else %}
                            <p>Vous avez déjà contribué</p>
                        {% endif %}
                    {% else %}
                        <p>Pour contribuer, veuillez vous connecter</p>
                    {%  endif %}
                </div>
            </div>
        </section>
        <section class="row">
            <div class="offset-md-3 col-md-6 col-12">
                <h2>Principaux topics de votre article</h2>
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        {% for topic in topics %}
                            <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="#nav-{{ topic.labelUrl }}" role="tab" aria-controls="nav-home" aria-selected="true">{{ topic.label }}</a>
                        {% else %}
                            <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="#nav-nothing" role="tab" aria-controls="nav-home" aria-selected="true">Pas de correspondance</a>
                        {% endfor %}
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    {% for topic in topics %}
                        <div class="tab-pane fade" id="nav-{{ topic.labelUrl }}" role="tabpanel" aria-labelledby="nav-home-tab">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Source</th>
                                    <th scope="col">Titre</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for article in topic.ozaeArticles.articles %}
                                    <tr>
                                        <th scope="row">{{ article.source.domain }}</th>
                                        <td>{{ article.name}}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="2">Oops ! Aucun article trouvé.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="tab-pane fade show active" id="nav-nothing" role="tabpanel" aria-labelledby="nav-home-tab">
                            <p>Désolé, nous n'avons pas trouvé de mot clé pour cet article.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        var config1 = liquidFillGaugeDefaultSettings();
        config1.circleColor = "#26B0BD";
        config1.textColor = "#FFFFFF";
        config1.waveTextColor = "#FFFFFF";
        config1.waveColor = "#26B0BD";
        config1.circleThickness = 0.05;
        config1.textVertPosition = 0.5;
        config1.waveHeight = 0.25;
        config1.waveAnimateTime = 950;
        var gauge1 = loadLiquidFillGauge("fillgauge1", {{ articleScore * 100 }}, config1);

        function NewValue(){
            if(Math.random() > .5){
                return Math.round(Math.random()*100);
            } else {
                return (Math.random()*100).toFixed(1);
            }
        }
    </script>
{% endblock %}
